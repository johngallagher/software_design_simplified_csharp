@using MicropostsApp.Extensions
@model RegisterViewModel
@{
    ViewData[index: "Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<form method="post" id="signupForm">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control"/>
    </div>
    @if (ViewContext.HttpContext.RequestServices.GetRequiredService<IWebHostEnvironment>().IsDevelopment())
    {
        <input type="hidden" name="ProtectionToken"
               value="@Context.Request.Query.GetValueOrDefault(key: "castleToken", defaultValue: "test|device:chrome_on_mac|risk:0.0|policy.action:allow")"/>
    }
    <button type="submit" class="btn btn-primary">Register</button>
</form>
